<%- include('../partials/header') %>

<div class="container mt-4">
  <h2>My Books</h2>
  <a href="/books/new" class="btn btn-success mb-3">Add Book</a>
  <% if (!books || books.length === 0) { %>
    <p>No books yet.</p>
  <% } else { %>
    <ul class="list-group">
      <% books.forEach(b => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= b.title %></strong> â€” <%= b.author %>
          </div>
          <div>
            <a href="/books/<%= b._id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>
            <form action="/books/<%= b._id %>?_method=DELETE" method="POST" style="display:inline">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } %>
</div>

<%- include('../partials/footer') %>
