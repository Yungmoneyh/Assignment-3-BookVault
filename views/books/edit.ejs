<%- include('../partials/header') %>

<!-- Edit Book form wrapper -->
<div class="container mt-4">
  <h2>Edit Book</h2>

  <!-- Form to update book info -->
  <form action="/books/<%= book._id %>?_method=PUT" method="POST">
    <!-- Book title input -->
    <div class="mb-3">
      <label>Title</label>
      <input name="title" value="<%= book.title %>" class="form-control" required />
    </div>

    <!-- Book author input -->
    <div class="mb-3">
      <label>Author</label>
      <input name="author" value="<%= book.author %>" class="form-control" />
    </div>

    <!-- Submit and cancel buttons -->
    <button class="btn btn-primary">Update</button>
    <a href="/books" class="btn btn-secondary">Cancel</a>
  </form>
</div>

<%- include('../partials/footer') %>
